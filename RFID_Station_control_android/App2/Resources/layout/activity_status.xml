<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:gridSpec="1|8|#0093eeff|K:#ee8700ff:16,l:72,l:16,r|S:#83ee00ff:16,0,l:16,56,l:16,0,r">

  <ScrollView
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView1">
    <LinearLayout
      android:orientation="vertical"
      android:minWidth="25px"
      android:minHeight="25px"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/linearLayout1"
      android:overScrollMode="ifContentScrolls"
      android:verticalScrollbarPosition="defaultPosition">
      <Button
        android:text="Back to main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/backButton" />
      <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">
        <Button
          android:text="Get Status"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/getStatusButton" />
        <Button
          android:text="Get config"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/getConfigButton" />
        <Button
          android:text="Get errors"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/getErrorsButton" />
      </LinearLayout>
      <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3">
        <Button
          android:text="Set mode"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/setModeButton" />
        <Spinner
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/modeListSpinner" />
      </LinearLayout>
      <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4">
        <Button
          android:text="Reset station"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/resetStationButton" />
        <LinearLayout
          android:orientation="vertical"
          android:minWidth="25px"
          android:minHeight="25px"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/linearLayout5">
          <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout6">
            <TextView
              android:text="New station #"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:id="@+id/textView3"
              android:gravity="center" />
            <EditText
              android:inputType="numberDecimal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/newStationNumberEditText" />
          </LinearLayout>
          <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout7">
            <TextView
              android:text="Chips checked"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:id="@+id/textView6"
              android:gravity="center" />
            <EditText
              android:inputType="numberDecimal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/chipsCheckedEditText" />
          </LinearLayout>
          <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout8">
            <TextView
              android:text="Last check"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:id="@+id/textView7"
              android:gravity="center" />
            <EditText
              android:inputType="text"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/lastCheckEditText" />
          </LinearLayout>
        </LinearLayout>
      </LinearLayout>
      <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout9">
        <Button
          android:text="Clear log"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/clearTerminalButton" />
      </LinearLayout>
      <TextView
        android:text="Terminal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/terminalTextView" />
    </LinearLayout>
  </ScrollView>

</RelativeLayout>
